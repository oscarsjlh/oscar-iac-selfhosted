{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "onboarding": false,
  "repositories": [
    "oscarsjlh/oscar-iac-selfhosted"
  ],
  "requireConfig": "optional",
  "platformAutomerge": true,
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 10,
  "prCreation": "immediate",
  "rebaseWhen": "behind-base-branch",
  "gitUrl": "default",
  "enabledManagers": ["docker-compose"],
  "docker-compose": {
    "fileMatch": ["^docker/.+/docker-compose\\.ya?ml$"]
  },
  "ignorePaths": [
    "**/docker/immich/**"
  ],
  "packageRules": [
    {
      "description": "Group all Docker Compose updates into a single PR",
      "matchManagers": ["docker-compose"],
      "matchDatasources": ["docker"],
      "groupName": "Docker images",
      "pinDigests": true,
      "versioning": "docker",
      "enabled": true,
      "automerge": true
    },
    {
      "description": "Separate major updates for manual review",
      "matchManagers": ["docker-compose"],
      "matchUpdateTypes": ["major"],
      "groupName": "Docker images - major",
      "automerge": false
    }
  ]
}
